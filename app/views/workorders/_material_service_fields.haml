%tr
  %td    
    = f.hidden_field :material_service_type_id,:class => :material_service_type_id
  %td
    .ajax_loader_m.left
    -if f.object.material_service_type_id
      .code
        = image_tag "confirm.png"
    -else
      .code.hide
        = image_tag "confirm.png" 
    - if f.object.material_service_type_id.nil?        
      = f.text_field :material,:class=>:material
    -else
      -#= text_field_tag :material,"[#{f.object.material_service_type.material.prov_code}] #{f.object.material_service_type.material.name}",:class =>:material
      = f.fields_for :material_service_type do |mst_form|
        = mst_form.fields_for :material do |m_form|
          = m_form.object.detail
    %input.copy_detail.input_long.hide
    -#- if f.object.material.nil?
    -#  = f.text_field :material,:class=>:material,:style =>"display:none"
  %td.number    
    = f.text_field :amount,:class =>"amount right"
  %td.number
    = f.text_field :price ,:class =>"price right"
  %td.number
    .total_item
      = number_to_currency(f.object.total_price) if f.object.amount
  %td.number
    = f.hidden_field :_destroy    
    = link_to_remove_fields f,:material_service,"Borrar Material"
