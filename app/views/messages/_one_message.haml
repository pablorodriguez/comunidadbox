    = link_to "read", read_message_path(message), :remote => true,:method => :post,:class => :read
  .info_note    
    .left
      = message.message  
    .right
      .date
        %lable{:title =>"Creado el"}
          = l message.created_at,:format => :short  
  .actions
    -if message.user == current_user
      .action
