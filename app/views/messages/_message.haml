-m_style = message.read? ? "" : "box-shadow: 0 1px 2px red;"
-m_css = message.read? ? "" : "message_not_read"

%div{:id=>"message_#{message.id}" ,:class=>"note #{m_css} msg"}  
  .url.hide
    = read_message_path(message)
  .info_note    
    .left
      = message.message  
    .right
      .date
        %lable{:title =>"Creado el"}
          = l message.created_at,:format => :short
      .user.right.clear
        %label{:title =>"Creado por"}
          =message.user.full_name
  .notes_fk
    - if message.event
      = link_to "",event_path(message.event),:class=>"event_s",:title =>"Servicio a Realizar"
    - if message.workorder      
      = link_to "",workorder_path(message.workorder),:class =>"service_s",:title =>"Servicio Realizado"
    - if message.budget      
      = link_to "",budget_path(message.budget),:class=>"budget_s",:title =>"Presupuesto"      
  
  -if message.user == current_user
    .actions
      .action.hide
        = link_to "",respond_message_path(message),:class=>"edit",:title =>"Modificar"
      .action
        = link_to "", message_path(message), :confirm => 'Â¿ Esta seguro que desea borrar la Nota ?', :method => :delete,:title =>"Eliminar",:remote=> true,:class=>:delete        
