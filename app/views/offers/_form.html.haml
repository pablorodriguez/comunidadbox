%fieldset
  %legend
    Detalle de Oferta
  %p
    %h2 Autos Seleccionados

  %table
    - @cars.each do |car|
      %tr
        %td
          =h car.domain
          =hidden_field_tag 'car_ids[]', car.id
  %p
    %h2 Servicio

  %p
    .field
      Titulo
      = f.text_field :title
  %p
    .field
      Precio
      = f.text_field :price, :size=>4
      Descuento
      = f.text_field :discount, :size=>4
      Descuento %
      = f.text_field :percent, :size=>4
      Precio Final
      = f.text_field :final_price, :size=>4
      Estado
      = f.select :status, Offer::STATUS_TYPES
  %br
  %p
    %h3 Valido
  %p
    .field
      Desde
      = f.date_select :from
      Hasta
      = f.date_select :until
  %br
  %table
    %tr
      %th
      %th Lu
      %th Ma
      %th Mi
      %th Ju
      %th Vi
      %th Sa
      %th Do
    %tr
      %td Dias
      %td
        = f.check_box :monday
      %td
        = f.check_box :tuesday
      %td
        = f.check_box :wednesday
      %td
        = f.check_box :thursday
      %td
        = f.check_box :friday
      %td
        = f.check_box :saturday
      %td
        = f.check_box :sunday

  %p
    Comentario
    %br
    = f.text_area :comment, :cols => 70, :rows => 4

