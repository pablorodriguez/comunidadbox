.datos_personales
  %table.tabla_datos_personales
    %tr
      %td
        %h3=t(".name")
      %td
        = car.user.full_name
        = show_company_info car
      %td
        %h3=t(".domain")
      %td
        %p#domain
          .domain_white
            = link_to car.domain,car
      %td
        %h3=t(".year")
      %td
        = car.year
    %tr  
      %td
        %h3=t(".email")
      %td
        = car.user.email
      %td
        %h3=t(".brand_model")
      %td
        = "#{car.brand.name} #{car.model.name}"
      %td
        %h3=t(".phone")
      %td
        = number_to_phone car.user.phone
    %tr
      %td
        %h3=t(".mileage")
      %td
        %span#km
          = car.km
      %td
        %h3=t(".mileage_monthly_average")
      %td
        %span#kmAverageMonthly
          = car.kmAverageMonthly
      %td
        %h3=t(".last_update")
      %td 
        %span#kmUpdatedAt
          = l car.kmUpdatedAt.to_date if car.kmUpdatedAt
          