= render 'shared/error_messages', :target => @car
= form_for @car,:html=>{:class =>"car"} do |f|
  = f.hidden_field :user_id  
  = hidden_field_tag "budget_id",@budget.id if @budget
  .box_bottom
    = render :partial => "users/car_fields",:locals => {:f => f}
  .buttons_container
    = f.submit t(".save"),:class=>"button"
    - if current_user.company
      = link_to t(".cancel"),client_path(@car.user)
    -else
      = link_to t(".cancel"),my_cars_path
