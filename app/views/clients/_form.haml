-# javascript 'clients'

= form_for @client, :url => clients_path do |f|
  - if @budget
    = hidden_field_tag "budget_id",@budget.id
  = render 'shared/error_messages', :target => @client
  #user_data
    .box_bottom
      %h3 Información Personal
      %table.w
        %tbody
          = render 'users/user_row',:f => f
    %h3 Información de su auto
    .box_bottom
      =f.fields_for :cars do |c|
        = render 'users/car_fields',:f =>c
    %h3 Direccion Personal
    .personal_address.box_bottom
      =f.fields_for :address do |a|
        = render 'users/user_address_fields', :f =>a
  .buttons_container    
    = f.submit "Grabar",:class=>:button
    = link_to "Cancelar",clients_path
