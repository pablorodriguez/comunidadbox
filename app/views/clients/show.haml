.vertical_menu
  = render "home/menu"
  = render "client_menu"
.contentright_s
  .box_bottom
    %h1 Cliente
  .box_bottom
    %h3 Información Personal
    %table.w
      %tbody
        %tr
          %td{:width=>"100px"}
            Nombre
          %td
            = @client.first_name
        %tr
          %td Apellido
          %td
            = @client.last_name
        - if @is_client
          %tr
            %td Email
            %td
              = @client.email
          %tr
            %td Razón Social
            %td
              = @client.company_name
          %tr
            %td CUIT
            %td
              = @client.cuit
          %tr
            %td Teléfono
            %td
              = @client.phone
  - if @client.address && @is_client
    .box_bottom
      %h3 Dirección
      %table.w
        %tbody
          %tr
            %td{:width=>"100px"} Provincia
            %td
              = @client.address.state.name
          %tr
            %td Ciudad
            %td
              = @client.address.city
          %tr
            %td Calle
            %td
              = @client.address.street
          %tr
            %td Código Postal
            %td
              = @client.address.zip
  .client_cars
    - @client.cars.each do |car|
      .clear.row
        .left
          = brand_logo car.brand.name            
        .domain_white.left
          = link_to car.domain, car
        %h1.left
          = "#{car.model.name} #{car.year}"
        .actions
          .action
            = link_to "",new_budget_path(:ca => car.id),{:title=>"Nuevo Presupuesto",:class=>"new_budget"}
          .action
            = link_to "", new_workorder_path(:car_id =>car),{:title=>"Nuevo Servicio",:class =>"new_service"}
          .action
            = link_to "",edit_car_path(car),{:title=>"Modificar automóvil",:class =>"edit"} if current_user.can_edit?(car.user)