.box_bottom
  %h1 Listado de Clientes

- for client in @clients
  - is_client = is_client(client)
  .row
    .client
      .left
        %strong
          = link_to h(client.full_name), client_path(client),:title=>"Ver"
        
      - if is_client
        .left
          = client.email
        .phone
          = client.phone
      .left.clear
        = link_to client.creator.company.name, company_path(client.creator.company) if client.creator

      .actions.right
        .action
          = link_to "",new_budget_path(:c => client.id),{:title=>"Nuevo Presupuesto",:class=>"new_budget"}
        .action
          = link_to "", new_car_path(:user_id=>client.id),  {:title =>"Nuevo AutomÃ³vil",:class =>"new_car"}
        .action
          = link_to "",edit_client_path(client),{:title=>"Modificar",:class =>"edit"} if client.can_edit?(current_user)
    - client.cars.each_with_index do |car,index|  
      .client_car.box_top.left
        .detail.left
          .left.domain
            = link_to h(car.domain),car
          %strong
            = car.brand.name
            = car.model.name
            = car.year
        .actions
          .action
            = link_to "",new_budget_path(:ca => car.id),{:title=>"Nuevo Presupuesto",:class=>"new_budget"}
          .action
            = link_to "", new_workorder_path(:car_id =>car),{:title=>"Nuevo Servicio",:class =>"new_service"}
          .action
            = link_to "",edit_car_path(car),{:title=>"Modificar automÃ³vil",:class =>"edit"} if car.can_edit?(current_user)
   
= will_paginate @clients
