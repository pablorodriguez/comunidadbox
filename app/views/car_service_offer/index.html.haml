- javascript 'jquery.dataTables'
- javascript 'sort.table'
- stylesheets 'demo_page'
- stylesheets 'demo_table'
%h1 Ofertas Servicio de Autos
%table#sort_table.display
  %thead
    %tr
      %th Titulo        
      %th Tipo de Servicio
      %th Dominio
      %th Usuario
      %th Estado
      %th
  - @offers.each do |offer|
    %tr
      %td=link_to offer.service_offer.title, offer
      %td= offer.service_offer.service_type.name
      %td=h offer.car.domain
      %td=h offer.car.user.full_name
      %td=h offer.status
      %td= link_to image_tag('new.png'), new_workorder_path(:car_id => offer.car.id,:so=>offer.service_offer),{:title =>"Nuevo Servicio"}
		
