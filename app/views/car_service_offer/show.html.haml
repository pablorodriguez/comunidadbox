%h1 Oferta de Servicio

%table.service_table
  %tr.table_header 
    %td{:colspan=>4} Servicio
  %tr
    %td.label_title Titulo
    %td
      = h @offer.service_offer.title
  %tr
    %td.label_title Precio
    %td
      =h number_to_currency(@offer.service_offer.price)
  %tr
    %td.label_title Descuento %
    %td
      = h @offer.service_offer.percent
  %tr
    %td.label_title Precio Final
    %td
      =h number_to_currency(@offer.service_offer.final_price)
    %td.label_title Estado
    %td
      =h @offer.status
  %tr
    %td{:colspan=>4} Valido
  %tr
    %td.label_title Desde
    %td
      =h @offer.service_offer.from
    %td.label_title Hasta
    %td
      =h @offer.service_offer.until    
  %tr.table_header
    %td{:colspan=>4}
      Dias
  %tr
    %td.label_title{:colspan=>4}
      =h @offer.service_offer.monday ? "Lunes" : " "
      =h @offer.service_offer.tuesday ? "Martes" : " "
      =h @offer.service_offer.wednesday ? "Miercoles" : " "
      =h @offer.service_offer.thursday ? "Jueves" : " "
      =h @offer.service_offer.friday ? "Viernes" : " "
      =h @offer.service_offer.saturday ? "Sabado" : " "
      =h @offer.service_offer.sunday ? "Domingo" : " "

  %tr.table_header
    %td{:colspan=>4} Comentario
  %tr
    %td{:colspan=>4}
      =h @offer.service_offer.comment

%table
  %tr
    %td
      - if (@offer.status == 'Enviado')
        = button_to "Aceptar", confirm_car_service_offer_path(@offer),:method=>:get
    %td
      - if (@offer.status == 'Enviado')
        = button_to "Rechazar", reject_car_service_offer_path(@offer),:method=>:get 
    %td
      = link_to_back

