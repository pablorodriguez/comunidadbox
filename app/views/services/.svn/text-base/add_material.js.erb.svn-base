if ($('#material_row').val() !=''){
	$("#material_detail_<%=@material_service.row%>").html("<%=escape_javascript(render(:partial=>'materials/material_row', :locals =>{:material =>@material_service}))%>");
	$("#material_detail_<%=@material_service.row%>").css("backgroundColor",'white');
}else{
	$('#materials_table tr:last').after("<%= escape_javascript(render(:partial=>'materials/new_material', :locals =>{:material =>@material_service}))%>");
}
$('#material_form').reset();
if(<%= @tasks.size%> >0){
	$('#service_type_task').html("<%=escape_javascript(render(:partial=>'service_types/list_tasks',:locals =>{:tasks =>@tasks,:service =>@service}))%>");
	$('#tasks').easyListSplitter();
}
$("#material_detail_<%=@material_service.row%>").effect("highlight", {}, 3000);
$("#add_material").val("Agregar Material");
$('#total_price').html('0');
$('#material_total_price').html("$ <%=@service.total_price%>");
$('#material_total_price').effect('highlight',{},3000);
$("#material_service_type_id option[value='<%=@material_service.material_service_type.service_type_id%>']").attr('selected', 'selected'); 
$("#material_service_type_id").disable();
$("#material_detail").focus();
AjaxLoader.disable();
