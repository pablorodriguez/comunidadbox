#div{:id=>"row_#{car_service_offer.id}",:class=>"service_offer_row row"}
  -service_offer = car_service_offer.service_offer
  .service_offer_info
    .service_offer_detail        
      .company_name        
        = link_to service_offer.company.name,service_offer.company
      .service_offer_title      
        = link_to service_offer.title, car_service_offer,:class =>"view"
      .service_offer_name
        = service_offer.service_type.name
      = icon_status(car_service_offer.status)
      -if (company_id && service_offer.company.id == get_company.id) || (current_user.is_super_admin?)
        .cars
          Autos:
          = car_service_offer.cars.size
    .price_detail
      .price              
        Precio:
        = number_to_currency service_offer.final_price
      .discount
        Descuento:
        = number_to_percentage(service_offer.percent, :precision =>2)
    .valid
      .service_offer_valid
        %span
          Valido
        %span
          = l service_offer.since unless service_offer.since.nil?
        %span
          = l service_offer.until unless service_offer.until.nil?
      .service_offer_dates
        %span
          Dias
        .days
          %ul
            - service_offer.valid_dates.each do |day|
              %li
                =day