- javascript 'jquery.dataTables'
- javascript 'sort.table'
- stylesheets 'demo_page'
- stylesheets 'demo_table'
#employees
  %h1 Lista de Empleados
  %table#sort_table.display
    %thead
      %tr
        %th Nombre
        %th Apellido
        %th Email
        %th
    - for emp in @employees
      - if emp != current_user
        %tr
          %td
            = emp.first_name
          %td
            = emp.last_name
          %td
            = link_to h(emp.email),employee_path(emp)
          %td
            = link_to image_tag('delete.gif'), employee_path(emp), :confirm => 'Â¿ Esta seguro que desea borrar al empleado ?', :method => :delete
