#employees
  %h1 Lista de Empleados
  .contentleft
    = render "search"
  .contentright  
    - if @employees.size > 0
      %table#sort_table.comboxtable
        %thead
          %tr
            %th Nombre
            %th Apellido
            %th Email
            %th
        - for emp in @employees
          - if emp != current_user
            %tr
              %td
                = emp.first_name
              %td
                = emp.last_name
              %td
                = link_to h(emp.email),employee_path(emp),:title =>"Ver empleado"
              %td
                = link_to image_tag('delete.png'), employee_path(emp), :confirm => 'Â¿ Esta seguro que desea borrar al empleado ?', :method => :delete,:title =>"Borrar empleado"
    -else
      %h1 No hay empleados
    %br         
      = link_to image_tag('new.png'), new_employee_path,:title =>"Crear nuevo empleado"
