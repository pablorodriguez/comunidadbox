#filters.hide
  %h1 Filtros
  %table.w
    %tr
      %td Nombre
    %tr
      %td
        .left
          = f.text_field 'name',{:class=>"short_text"}
          %label{:id=>'filter_label',:class=>:link,:style=>"display:none"}
          #service_offers
          = collection_select(:service_offer,:service_type, @filters,:id,:name,{:include_blank=>:true},{:class=>"change medium_select",:id=>:sf,:name=>:sf,:selected=>@sf,:style=>"display:none"})
        .right
          = image_tag('save.png',{:id=>:save_filter,:class=>:link})
          = image_tag('find.png',{:id=>:find_filter,:class=>:link})
#search.box_bottom
  %h3 Buscar
  %table.w
    %tr
      %td
        =f.collection_select(:service_type_id, @company_services,:id,:name,{:prompt=>"-- Tipo de Servicio --"},{:class=>"change long_select"})
    %tr
      %td
        = f.collection_select(:state_id, @states, 'id', 'name', {:prompt=>"-- Provincia --"},{:class=>"clear change long_select"})
    %tr  
      %td
        =f.text_field :city,{:class=>"clear change labelify",:style=>"width:174px",:title=>"Ciudad"}
    %tr
      %td
        = f.collection_select(:brand_id, @brands, :id, :name, {:prompt=>"-- Marca --"},{:class=>"clear change long_select"})
    %tr
      %td
        #models
          = f.collection_select(:model_id, @models, 'id', 'name', {:prompt=>"-- Modelo --"},{:class=>'model clear change long_select'})  
    %tr
      %td
        =f.collection_select(:fuel,@fuels,:to_s,:to_s,{:prompt=>"-- Comustible --"},{:class=>"clear change long_select"})
    %tr
      %td
        =f.collection_select(:year,@years,:to_i,:to_i,{:prompt=>"-- AÃ±o --"},{:class=>"clear change short_select"})
    %tr      
      %td
        .select_event
          .left
            Eventos Tipos
          .right  
            .rojo.left
              = check_box_tag :red,:red,@event_types[:red],:class =>:checkbox
            .amarillo.left
              = check_box_tag :yellow,:yellow,@event_types[:yellow],:class =>:checkbox
            .verde.left
              = check_box_tag :green,:green,@event_types[:green],:class =>:checkbox
        .select_event
          .left
            = label_tag :my_clients,"Mis Clientes",:class=>:link
          .right
            = check_box_tag :my_clients,true,@my_clients,:class =>:checkbox
        .select_event
          .left
            = label_tag :others,"Otros Clientes",:class=>:link
          .right
            = check_box_tag :others,true,@others,:class =>:checkbox
        .right
          = image_tag('find.png',{:id=>:reload,:class=>:link})

#select.box_bottom
  %h3 Seleccionar Clientes
  .select_event
    .left
      Mios
    .mi_amarillo.color.right
      = check_box_tag :select_yellow,:mi_amarillo,false,:class =>:checkbox
    .mi_rojo.color.right
      = check_box_tag :select_red,:mi_rojo,false,:class =>:checkbox
    
  .select_event
    .left
      Otros
    .amarillo.color.right
      = check_box_tag :select_yellow,:amarillo,false,:class =>:checkbox
    .rojo.color.right
      = check_box_tag :select_red,:rojo,false,:class =>:checkbox
