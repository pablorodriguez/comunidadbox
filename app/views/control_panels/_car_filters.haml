#search.box_bottom
  %h3 Buscar
  %table.w
    %tr
      %td
        =f.collection_select(:service_type_id, @company_services,:id,:name,{:include_blank=>"-- Tipo de Servicio --"},{:class=>"change long_select"})
    %tr
      %td
        = f.collection_select(:state_id, @states, :id, :name, {:include_blank=>"-- Provincia --"},{:class=>"clear change long_select"})
    %tr  
      %td
        =f.text_field :city,{:class=>"clear change labelify",:style=>"width:174px",:title=>"Ciudad"}
    %tr
      %td
        = f.collection_select(:brand_id, @brands, :id, :name, {:include_blank=>"-- Marca --"},{:class=>"clear change long_select"})
    %tr
      %td
        #models
          = f.collection_select(:model_id, @models, :id, :name, {:prompt=>"-- Modelo --"},{:class=>'model clear change long_select'})  
    %tr
      %td
        =f.collection_select(:fuel,@fuels,:to_s,:to_s,{:include_blank=>"-- Combustible --"},{:class=>"clear change long_select"})
    %tr
      %td
        =f.collection_select(:year,@years,:to_i,:to_i,{:include_blank=>"-- AÃ±o --"},{:class=>"clear change long_select"})
#event_types.box_bottom
  %h3 Seleccione Eventos  
  %table.w  
    %tr      
      %td
        Eventos Tipos
      %td
        .rojo.left
          = check_box_tag :red,:red,@event_types[:red],:class =>:checkbox
        .amarillo.left
          = check_box_tag :yellow,:yellow,@event_types[:yellow],:class =>:checkbox
        .verde.left
          = check_box_tag :green,:green,@event_types[:green],:class =>:checkbox
    %tr
      %td
        = label_tag :my_clients,"Mis Clientes",:class=>:link
      %td  
        = check_box_tag :my_clients,true,@my_clients,:class =>:checkbox
    %tr
      %td
        = label_tag :others,"Otros Clientes",:class=>:link
      %td  
        = check_box_tag :others,true,@others,:class =>:checkbox
    %tr
      %td    
        = image_tag('find.png',{:id=>:reload,:class=>:link})

#select.box_bottom
  %h3 Seleccione Clientes
  %table.w
    %tr
      %td
        Mis
      %td
        .mi_amarillo.color
          = check_box_tag :select_yellow,:mi_amarillo,false,:class =>:checkbox
      %td
        .mi_rojo.color
          = check_box_tag :select_red,:mi_rojo,false,:class =>:checkbox
    %tr
      %td
        Otros
      %td
        .amarillo.color
          = check_box_tag :select_yellow,:amarillo,false,:class =>:checkbox
      %td
        .rojo.color
          = check_box_tag :select_red,:rojo,false,:class =>:checkbox
#menu_actions
  .menu_actions.box_bottom
    %ul
      %li      
        = link_to_function "Crear Oferta de Servicio","createNewService();"
