-# javascript 'highcharts'
-# javascript 'map_content'

:javascript
  var chart;
  var url;
  $(document).ready(function() {
    var data = #{@series_data};
    var service_names = [#{@services_names}];
    url = "#{filter_alarms_control_panels_path}";
    chart = buildControlPanelChart(service_names,data,"#{t('nro_future_events')}");
  });
.title.box_bottom  
  %h1 
    = t ".control_panel"
.box_bottom
  -unless @no_data
    %h1 
      = t(".due_date_services")
    #graph_container
  -else
    = render 'shared/message', :msg => t(".no_service_to_perform")
.buttons_container
  = link_to t("cancel"), root_path
