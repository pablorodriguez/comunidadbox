= form_for(@model) do |f|
  = render 'shared/error_messages', :target => @model
  %p
    Marca
    %br
    = f.select(:brand_id,options_from_collection_for_select(Brand.find(:all,:order=>'name'), :id, :name), {:prompt => "Seleccione una marca"})
  %p
    = f.label :name
    %br
    = f.text_field :name

  .buttons_container
    = f.submit "Grabar",:class =>:button
    = link_to "Cancelar",models_path