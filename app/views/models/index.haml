-# javascript 'jquery.dataTables'
-# javascript 'sort.table'
-# stylesheets 'demo_page'
-# stylesheets 'demo_table'
.vertical_menu
  = render "conf/menu"
.contentright_s
  %h1 Listado de Modelos
  %table{:id=>'sort_table',:class=>'display w'}
    %thead
      %tr
        %th Nombre
        %th Marca
        %th
    - for model in @models
      %tr
        %td
          = link_to h(model.name),model
        %td
          = h(model.brand.name)
        %td
          = link_to image_tag('edit.png'), edit_model_path(model)
          = link_to image_tag('delete.png'), model, :confirm => 'Â¿ Esta seguro que desea borrarlo ?', :method => :delete
  %br
  = link_to image_tag('new.png'), new_model_path
