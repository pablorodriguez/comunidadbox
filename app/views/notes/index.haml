.vertical_menu
  = render "home/menu"
  .notes_menu_actions
    %h3 Acciones
    = link_to "Nueva Nota", new_note_path
.contentright_s
  %h1 Listado de Notas
  .box_bottom
  #notes
  - @notes.each do |note|
    .row    
      %div{:id=>"note-#{note.id}",:class=>"note clear"}
        .left
          = note.message
        -if note.creator_id == current_user.id
          .right
            = link_to image_tag('delete.png'), note_path(note), :confirm => 'Â¿ Esta seguro que desea borrar la Nota ?', :method => :delete,:title =>"Eliminar",:remote=> true  
        .info
          .date
            %lable{:title =>"Creado el"}
              = l note.created_at,:format => :short
          .user
            %label{:title =>"Creado por"}
              =note.creator.full_name
