	.left    
      = f.label(:message,"Nota",:class => :left)
      %br
      = f.text_area :message,:cols=>50,:rows=>3
      WO
      = f.text_field :workorder_id,wo
      Usr
      = f.text_field :user_id
    .right.clear
      = f.submit "Grabar",:class=>:button,:disable_with => 'Grabando...'
      = f.submit "Grabar 2",:class =>"button",:disable_with => 'Grabando...'

