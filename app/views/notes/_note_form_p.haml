.notes_container.box_top.hide
  = render :partial => "notes/note_form",:locals=>{:wo => wo,:b=>b}
  .notes.hide
    - if notes && notes.size > 0
      = render :partial =>'notes/notes_small_view',:collection => notes,:as=>:note    
  - if notes && notes.size > 0
    .clear
      = will_paginate notes