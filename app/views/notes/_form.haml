= form_for @note,:html=>{:class=>"nn"} do |f|
  .box_bottom
    - if @note.errors.any?
      #error_explanation
        %h2
          = pluralize(@note.errors.count, "error")
          prohibited this note from being saved:
        %ul
          - @note.errors.full_messages.each do |msg|
            %li= msg
    %table
      %tr
        %td{:style=>"width:100px"}
          Nota
        %td
          = f.text_area :message,:cols => 57, :rows => 3
  = f.submit "Grabar",:class=>"button"      
  .box_bottom    