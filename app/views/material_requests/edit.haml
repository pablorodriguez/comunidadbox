.vertical_menu
  = render "admin/menu"
  .menu_actions.box_bottom
    %ul
    -if !(user_signed_in? && current_user.is_super_admin?)
      %li
        = link_to "Nueva Solcitud", new_material_request_path

.contentright_s
  .box_bottom
    - if !@material_request.message.nil?
      %h1 Modificar Solicitud 
    = form_for  @material_request, :url => material_request_path(@material_request)  do |f| 
      .box_bottom
      - if current_user.is_super_admin? 
        = render "edit_state"
      - else       
        .box_bottom
          = render 'form',:f => f
        .buttons_container
          = f.submit "Actualizar",:class =>"button"
          = link_to "Cancelar",material_requests_path

   
     