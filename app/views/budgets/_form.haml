#materials.hide
  .materials
    = render :partial=>'materials'
.budget
  = form_for @budget,:html=>{:class=>:budget} do |f| 
    = render 'shared/error_messages', :target => @budget
    - if @budget.car
      = render :partial => "car",:locals =>{:car =>@budget.car,:f=>f}
    - if @budget.user
      = render :partial => "client",:locals => {:client =>@budget.user,:f => f}
    - if (@budget.user.nil? && @budget.car.nil?)
      = render "no_client",:f => f
    .comment.clear
      .box_bottom
      %table
        %tr
          %td{:style=>"width:104px"}
            Comentario
          %td
            = f.text_area :comment,:rows =>3,:cols =>67
    #services.box_top.clear
      = render :partial=>'services_list',:locals =>{:f=>f}