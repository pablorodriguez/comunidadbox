.budget_row.row[budget]
  - if (budget.domain && (!budget.domain.empty?)) || budget.car 
    .domain_white.left       
      - if budget.car
        = link_to(budget.car.domain, car_path(budget.car)) 
      -else
        = budget.domain
  .services    
    - budget.services.each do |s|
      .service
        = s.service_type.name
  .budget_info.clear
    %label.bg_id{:title => "NÃºmero del presupuesto"}
      = link_to budget.id, budget
    %label{title: "Cliente"}
      %strong
        Cliente:
    %label
      = budget.full_name
    %label
      %strong
        Operario:
    %label
      = budget.creator.full_name
    .right
      %label
        = l budget.created_at,:format => :short
      %label.price_b
        = number_to_currency budget.total_price
  - if (multiple_company? || not(current_user.company))
    .clear.left
      = budget.company.name
  
  .actions
    - if budget.can_edit?(current_user)
      .action     
        = link_to "", budget_path(budget), :data => {:confirm => 'Â¿ Esta seguro que desea borrar el Presupuesto ?'},:remote =>true, :method => :delete,:title =>"Eliminar",:class=>"delete"
    - if company_id
      .action
        = link_to "",new_workorder_path(:b =>budget.id),:title =>"Crear servicio",:class=>:new_service
      .action
        = link_to "",edit_budget_path(budget),:title=>"Modificar",:class=>"edit"
    .action  
      = link_to "",print_budget_path(budget,:format =>'pdf'),:target => "_blank",:title =>"Imprimir",:class =>:pdf
    .action
      %a{:title=>"Notas",:class=>"new_note_link",:href=>"#"}      
    - n_css = budget.notes.empty? ? "hide" : ""
    -if budget.can_send_message?(current_user)
      .action        
        %a{:title=>"Enviar Mensaje",:class=>"new_message",:href=>"#"}

  = render :partial =>"notes/note_form_np",:locals=>{:b => budget.id,:wo=>nil,:c => nil,:notes => budget.notes,:id=>budget.id}    
  -if budget.can_send_message?(current_user)
    .hide.message{:id => "messages_container_#{budget.id}"}
      - if current_user.is_employee?
        = render :partial => "/messages/form_user",:locals => {user: budget.user,:element_id => budget.id,:msg_object => budget}
      -else
        = render :partial => "/messages/form_user",:locals => {user: budget.creator,:element_id => budget.id,:msg_object => budget}
