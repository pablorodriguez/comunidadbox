- fields_for @user do |f1|
  %p
    %label{ :for => "login" }Nombre
    %br
    = f1.text_field :first_name
  %p
    %label{ :for => "login" }Apellido
    %br
    = f1.text_field :last_name
  %p
    %label{:for =>"phone"}TelÃ©fono
    %br
    = f1.text_field :phone
  %p
    %label{ :for => "email" }Email *
    %br
    = f1.text_field :email
  - if @show_emp
    %p
      %label Tipo de Empleado
      %br
      = f1.select 'roles', options_for_select(User::COMP_TYPES)
