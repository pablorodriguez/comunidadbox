%table
  %tbody
    %tr
      %td{:style=>"width:100px"}
        %label{ :for => "domain" }=t(".domain")
      %td
        .car_domain
          = f.text_field :domain,:size=>8, :maxlength =>6,:class=>"input_short user_domain",:placeholder =>"XXX999"
      %td{:colspan=>"2"}  
        .validation_car_domain.hide
    %tr
      %td
        %label{ :for => "brand_id" }=t(".brand")
      %td
        - company_not_present = @company.persisted?
        - if company_not_present
          = f.collection_select(:brand_id, @company.get_brands.order(:name), :id, :name, {:include_blank=>:true},{:class=>"company_brand medium_select"})
        - else
          = f.collection_select(:brand_id, Brand.find(:all,:order=>:name), :id, :name, {:include_blank=>:true},{:class=>"brand medium_select"})
      %td{:style=>"width:20px"}
      %td
        %label{ :for => "year" }=t(".year")
      %td
        = f.text_field :year,:size=>6,:maxlength =>4,:class=>"input_short"
    %tr
      %td
        %label{ :for => "model_id" }=t(".model") 
      %td
        #models
          - if company_not_present
            = f.collection_select(:model_id, find_company_models_by_brand(f.object, @company), 'id', 'name', {:include_blank=>:true},{:class=>'model medium_select'})
          - else
            = f.collection_select(:model_id, find_models(f.object), 'id', 'name', {:include_blank=>:true},{:class=>'model medium_select'})
      %td{:style=>"width:20px"}
      %td
        %label{ :for => "email" }=t(".mileage_monthly_average")
      %td
        = f.text_field :kmAverageMonthly,:size=>6,:class=>"input_short"
    %tr
      %td
        %label{ :for => "fuel" }=t(".fuel")
      %td
        = f.collection_select :fuel, %w(Nafta Diesel Gas),:to_s,:to_s,{:prompt=>""},{:class=>"medium_select"}
      %td{:style=>"width:20px"}
      %td
        %label{ :for => "km" }=t(".mileage")
      %td
        = f.text_field :km,:size=>10,:class=>"input_short"
