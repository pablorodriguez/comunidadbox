- form_for(@task) do |f|
  = f.error_messages
  %table
    %tr
      %td{:colspan=>3} Nombre
    %tr
      %td
        = f.text_field :name      
    %tr
      %td{:colspan=>3} Descripcion
    %tr
      %td{:colspan=>3}
        = f.text_area :description, :cols => 40, :rows => 3
    %tr
      %td{:colspan=>3}
        = f.submit "Grabar"
        = link_to_back

