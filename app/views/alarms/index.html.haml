.vertical_menu
  = render "menu"
.contentright_s
  .alarms
    %h1 Listado de Alarmas
    .row
    - @alarms.each do |alarm|
      .row.alarm
        .alarm_info.left
          .left
            =h alarm.name
          .clear.left
            =h alarm.description
            = icon_status alarm.status        
            = alarm.status
        .dates.left
          %strong
            Cada:
          =h alarm.time
          =h alarm.time_unit
          %strong
            Fecha
          =l alarm.date_alarm  
          #date_from
            %strong
              Inicia:
            =l alarm.date_ini
          #date_to
            %strong
              Finaliza:
            =l alarm.date_end
        .actions.right
          .action
            = link_to image_tag('edit.png'), edit_alarm_path(alarm)
          .action
            = link_to image_tag('delete.png'), alarm, :confirm => 'Esta seguro?', :method => :delete

  
  