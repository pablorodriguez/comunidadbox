- javascript 'jquery.dataTables'
- javascript 'sort.table'
- stylesheets 'demo_page'
- stylesheets 'demo_table'
%h1 Alarmas
%table{:id=>'sort_table',:class=>'display'}
  %thead
    %tr
      %th Titulo
      %th Descripcion
      %th Tiempo
      %th Unidad
      %th Estado
      %th Alarma
      %th Inicio
      %th Fin
      %th
  - @alarms.each do |alarm|
    %tr
      %td=h alarm.name
      %td=h alarm.description
      %td=h alarm.time
      %td=h alarm.status
      %td=h alarm.time_unit
      %td=h alarm.date_alarm
      %td=h alarm.date_ini
      %td=h alarm.date_end
      %td
        = link_to image_tag('edit.png'), edit_alarm_path(alarm)
        = link_to image_tag('delete.gif'), alarm, :confirm => 'Esta seguro?', :method => :delete

= link_to image_tag('new.png'), new_alarm_path
= link_to_back