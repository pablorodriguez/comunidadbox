#menu_options.box_bottom
  %ul
    %li
      #cars_link.menu        
        = image_tag "cars.png"
        - if company_id
          = link_to t(".clients"), clients_path
        - else
          = link_to t(".my_cars"), my_cars_path          
    - if company_id
      %li
        #control_panel_link.menu
          = image_tag "control-panel.png"
          = link_to t(".control_panel"),control_panels_path            
    %li
      #service_done_link.menu
        = image_tag "service.png"
        = link_to t(".services_made"),workorders_path
    %li
      #control_panel_link.menu
        = image_tag "budget.png"
        = link_to t(".budgets"),budgets_path      
    %li
      #service_offer.link.menu
        = image_tag "service_offer.png"          
        - if company_id
          = link_to t(".service_offers") , service_offers_path
        - else
          = link_to t(".service_offers") , car_service_offers_path

    = render "/home/new_menu"
    %li
      #service_center_link.menu
        = image_tag "find.png"        
        = link_to t(".service_providers"), all_companies_path         
