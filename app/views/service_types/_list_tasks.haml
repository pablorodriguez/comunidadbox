%table.service_table
  %tbody
    %tr.table_header
      %td
        Tareas
    %tr
      %td
        %ul#tasks
          - for task in tasks
            %li
              = check_box_tag("material[task_ids][]",task.id,service.tasks.include?(task))
              = task.name
      %tr
        %td Comentario
      %tr
        %td  
          = text_area(:material, :comment, :cols => 40, :rows => 5,:value=>service.comment)
    