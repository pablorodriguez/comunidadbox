- form_remote_tag :url => {:action => 'save_task'} do
  = select_tag 'task', options_for_select(['-Seleccione una Tarea-'] + @tasks.collect {|t| [t.name, t.id]}, :selected => '-Seleccione una Tarea-')
  = hidden_field_tag 'service_type', @service_type.id
  = submit_tag 'Agregar'
%br
%table#sort_table2.display
  %thead
    %tr
      %th Name
      %th Descripcion
      %th
  - for task in @service_type.tasks
    %tr{:id=>"task_#{task.id}"}
      %td
        = task.name
      %td
        = task.description
      %td
        = link_to_remote image_tag('delete.gif'), :url => {:action => 'destroy_task', :id => task.id, :service_type => @service_type.id}, :confirm => 'Â¿Esta seguro que desea borrarlo?'

