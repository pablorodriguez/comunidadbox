-# javascript 'sort.table'
.vertical_menu
  = render "conf/menu"
  = render "actions"
.contentright_s
  .box_bottom
    %h1 Listado Tipo de Servicio
  %table#sort_table.comboxtable
    %thead
      %tr
        %th Nombre
        %th Pertenece a
        %th Kms
        %th Días
        %th
    - for service_type in @service_types    
      %tr
        %td
          = link_to service_type.native_name,service_type              
        %td 
          -if service_type.parent   
            = service_type.parent.native_name
        %td
          = service_type.kms
        %td
          = service_type.days
        %td
          = link_to image_tag("edit.png"), edit_service_type_path(service_type)
          - unless is_assigned service_type
            = link_to image_tag("delete.png"), service_type,:data => {:confirm => '¿ Esta seguro que desea borrarlo ?'}, :method => :delete  