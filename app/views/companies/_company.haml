.row
  .company_detail
    .actions        
      - if company.address
        .action
          = link_to_function image_tag("find.png"),"search_address(this)",{:title => "Buscar direcciÃ³n en el mapa"} 
      
      - if user_signed_in? && company_id.nil?
        .action
          = link_to image_tag('new.png'), new_workorder_path(:company_id=>company.id,:car_id =>@car_id),{:title=>"Nuevo Servicio",:class=>"new_service_link"}
      - if active && user_signed_in? && company_id && current_user.is_administrator  
        .action 
          = is_active(company,activate_company_path(company)) 
    .left
      .nombre
        = link_to company.name,company_path(company),{:title => "Ver"}
      .address
        = company.full_address
      .phone
        = company.phone              
    .rank  
      ="#{company.total_user_ranked} \\ #{company.total_work_order}. Promedio Calif. [#{number_with_precision(company.user_rank)}]"
