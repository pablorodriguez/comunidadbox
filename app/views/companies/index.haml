- javascript 'jquery.dataTables'
- javascript 'maps'
- javascript 'search_company_map'
- stylesheets 'demo_page'
- stylesheets 'demo_table'
%h1 Empresas
-if @companies && @companies.size > 0
  %table
    %thead
      %tr
        %th Nombre
        %th
        %th Dirección
        %th Mapa
        %th Teléfono
        -if current_user
          %th Activar
        %th Reputación (1..5)
    - for company in @companies
      %tr
        %td
          = link_to company.name,company_path(company),{:title => "Ver"}
        %td
          -if current_user
            = link_to image_tag("edit.png"),edit_company_path(company),{:title => "Modificar"}
        %td
          %label        
            = company.full_address
        %td
          = link_to_function image_tag("buscar.png"),"search_address(this)",{:title => "Buscar dirección en el mapa"}
          
        %td
          = company.phone
        -if current_user
          %td
            = activate company
        %td
          ="#{company.total_user_ranked} \\ #{company.total_work_order}. Promedio Calif. [#{company.user_rank}]"
          - if company.active
            = hidden_field_tag :full_address, company.full_address
 
  #search_map
    %h1 Buscar en el Mapa
    #search_address
      %table
        %tr
          %td Dirección
          %td
            %input{:id =>"address_map",:size =>"20"}
            = link_to_function "Buscar","search_companies();"
            - if current_user && current_user.current_address
              = link_to_function "Cerca mio","search_companies_near_to_me('#{current_user.current_address.to_text}');"
             
    #map_canvas.map
-else
  %label
    No hay empresas registradas
%br
-if current_user
  = link_to image_tag("new.png"),new_company_path  
= link_to_back