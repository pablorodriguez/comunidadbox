  %li
    = link_to t("new_vehicle"), new_vehicle_path(:user_id=>current_user.id), {:title =>t("new_vehicle")}
  
#all_vehicles
  .vertical_menu
    = render "home/menu"
    = render :partial=>"search",:locals =>{:vehicles=>[],:table_id =>:sort_table}
