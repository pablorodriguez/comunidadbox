  .contentright_s
    #vehicles
      - if @vehicles.size > 0
        =render :partial=>"vehicles",:locals =>{:vehicles=>@vehicles,:table_id =>:sort_table}
      - else
        = render 'shared/message', :msg =>"No hay ningún automóvil"
    #clients.data.hide
    #company-selector.hide
      = render 'company_selector'