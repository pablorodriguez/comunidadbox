#service
  %h3{:style=>"margin:0px"}
    NotificaciÃ³n de Servicio Realizado
    = link_to image_tag('pdf.png',:style=>"border-style:hidden;"),workorder_url(@work_order,:format =>'pdf'),:target => "_blank"
  %p
    Estimado #{@user.full_name},
    Muchas gracias por confiar en ComunidadBox.
    %br
    Ud. acaba de realizar los siguientes servicios
  %table{:style=>"width:80%;margin:0 auto"}
    %thead
      %tr{:style=>"background-color:#F2EAB7;padding:5px"}
        %th{:colspan=>2} Detalle de los servicios realizados
    %tr      
      %td
        Prestador de Servicio
      %td  
        = link_to @work_order.company_name, company_url(@work_order.company),:target =>"_blank"
    %tr
      %td
        Realizado
      %td
        = l @work_order.performed
    %tr
      %td
        Operario
      %td
        = @work_order.user.full_name
    - for service in @work_order.services
      %tr
        %td
          = service.service_type.native_name
        %td
          = number_to_currency service.total_price
    %tr
      %td
        Total
      %td
        = number_to_currency @work_order.total_price          
  -if @user.future_events.size > 0      
    %br
    Sus proximos servicios de mantenimiento a realizar son
    - for car in @user.cars        
      - if car.future_events.size > 0
        %br
        %h4{:style=>"margin: 2px 2px 0px 2px"}
          = "Auto: #{car.domain}"
        %table{:style=>"width:80%;margin:0 auto"}
          %thead
            %tr{:style=>"background-color:#F2EAB7;padding:5px"}
              %th Vencimiento
              %th Tipo de Servicio         
          -for event in car.future_events
            %tr
              %td
                = l event.dueDate
              %td
                = event.service_type.native_name
  