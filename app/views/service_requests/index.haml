
.vertical_menu
  = render "custom_actions"  
  = render "home/menu"
  = render "home/default_actions"

.contentright_s    
  #default.data
    .box_bottom
      %h1
        = t(".listing_service_request")    
    
    - @service_requests.each do |service_request|
      .row
        .service_request_id{:title =>"Ver"}
          =link_to service_request.id , service_request
          = icon_status(service_request.status)
        .left
          - if service_request.car
            .domain_white
              = link_to service_request.car.domain,service_request.car
          - if service_request.user != current_user         
            = link_to service_request.user.full_name,service_request.user,:title =>"Cliente"        
        .left
          - service_request.item_service_requests.each do |isr|
            %strong
              = isr.service_type.name            
            = isr.description
            %br

        = service_request.company.try(:name)
        .actions
          -if service_request.can_edit? current_user
            .action
              = link_to '', service_request, method: :delete, data: { confirm: t('.sure_delete_service_request') },:class =>"delete"
            .action
              = link_to "", edit_service_request_path(service_request),:class =>"edit"
