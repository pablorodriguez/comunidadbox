%h1 Oferta de Servicio

%table.service_table
  %tr.table_header 
    %td{:colspan=>4} Autos Seleccionados
    - @offer.car_service_offer.each do |car_service|
      %tr
        %td{:colspan=>4}
          =h car_service.car.domain
  %tr.table_header
    %td{:colspan=>4} Servicio
  %tr
    %td.label_title Titulo
    %td
      = h @offer.title
  %tr
    %td.label_title Precio
    %td
      =h number_to_currency(@offer.price)
  %tr
    %td.label_title Descuento %
    %td
      = h @offer.percent
  %tr
    %td.label_title Precio Final
    %td
      =h number_to_currency(@offer.final_price)
    %td.label_title Estado
    %td
      =h @offer.status
  %tr.table_header
    %td{:colspan=>4} Valido
  %tr
    %td.label_title Desde
    %td
      =h @offer.from
    %td.label_title Hasta
    %td
      =h @offer.until    
  %tr.table_header
    %td{:colspan=>4} Dias
  %tr
    %td.label_title{:colspan=>4}
      =h @offer.monday ? "Lunes" : " "
      =h @offer.tuesday ? "Martes" : " "
      =h @offer.wednesday ? "Miercoles" : " "
      =h @offer.thursday ? "Jueves" : " "
      =h @offer.friday ? "Viernes" : " "
      =h @offer.saturday ? "Sabado" : " "
      =h @offer.sunday ? "Domingo" : " "

  %tr.table_header
    %td{:colspan=>4} Comentario
  %tr
    %td{:colspan=>4}
      =h @offer.comment

%p
  = link_to_back
  - if current_user.company
    - if (@offer.status == 'Pendiente' || @offer.status == 'Abierto')
      = link_to image_tag('edit.png'), edit_service_offer_path(@offer) 
