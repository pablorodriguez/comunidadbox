%h1 Listado de Ofertas de Servicios
%table#sort_table.comboxtable
  %thead
    %tr
      -unless current_user.company
        %th CompaÃ±ia
      %th Titulo
      %th Tipo de Servicio
      %th Desde
      %th Hasta  
      %th Autos    
      %th Estado
      - if @offers.size > 0 && @offers[0].company == current_user.company
        %th
  - @offers.each do |offer|
    %tr
      -unless current_user.company
        %td 
          = offer.company.name      
      %td=link_to offer.title, offer
      %td=h offer.service_type.name
      %td
        = l offer.from unless offer.from.nil? 
      %td
        = l offer.until unless offer.until.nil?
      %td= offer.cars.size
      %td=h offer.status     
      - if offer.company == current_user.company
        %td
          = link_to image_tag('delete.png'), offer, :confirm => 'Esta seguro que desea borrar la Oferta de Servicio?', :method => :delete
          = link_to image_tag('edit.png'), edit_service_offer_path(offer) if (offer.status == 'Pendiente' || offer.status == 'Abierto')
#paginator_wo
  = will_paginate @offers
=link_to_back
- if current_user.is_super_admin
  = link_to "Enviar Ofertas de Servicio", notify_service_offers_path,:class =>"btn2"
