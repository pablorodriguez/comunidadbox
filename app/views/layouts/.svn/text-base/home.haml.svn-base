%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head    
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "content-type"}/
    %meta{:name=>"google-site-verification",:content =>"yXoL0h3JI3L5qfYzFNwBQQhdWm5Q267S6gK_R-9d2yM"}
    %title Comunidad Box
    %meta{:content => "", :name => "keywords"}/
    %meta{:content => "", :name => "description"}/    
    %script{:type =>"text/javascript",:src =>"http://www.google.com/friendconnect/script/friendconnect.js"}
    = user_css
    = javascript_include_tag :defaults
    - javascript 'analytics'
    - javascript 'google-connect'
    = yield(:head)
  %body.background
    #header
      %div
        %a#logo{:href => "/"}
      = render :partial=>'layouts/logininfo'
    #menu
      %ul
        %li
          %a#topmenu1{:accesskey => "1", :href => "/", :title => ""} Inicio
        %li= link_to "Buscar Prestador de Servicio", all_companies_path
        - if  user_signed_in?
          %li= link_to "Mis Autos",cars_path
          - if current_user.is_administrator
            %li= link_to "Administración",admin_url
          - if current_user.is_super_admin
            %li= link_to "Configuración",'/conf'
    #content
      = render :partial=>'layouts/msg'
      #menu_welcome
        = yield
        = render :partial=>'users/login'
      = render :partial=>'layouts/sidebar'
    #footer
      = render :partial =>'layouts/footer'