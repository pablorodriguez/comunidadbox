%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "content-type"}/
    %meta{:name=>"google-site-verification",:content =>"yXoL0h3JI3L5qfYzFNwBQQhdWm5Q267S6gK_R-9d2yM"}
    %title Comunidad Box
    %script{:type => "text/javascript",:src  => "http://maps.google.com/maps/api/js?sensor=true"}
    
    %meta{:content => "", :name => "keywords"}/
    %meta{:content => "", :name => "description"}/
    = user_css
    = javascript_include_tag :defaults
    - javascript 'analytics'
    = yield(:head)    
  %body.background
    #header
      %div
        %a#logo{:href => "/"}
      = render :partial=>'layouts/logininfo'
    #menu
      %ul
        %li= link_to "Inicio", root_path
        %li= link_to "Buscar Prestador de Servicio", all_companies_path
        - if  user_signed_in?
          %li= link_to "Mis Autos",cars_path
          - if current_user.is_administrator
            %li= link_to "Administración",admin_path
          - if current_user.is_super_admin
            %li= link_to "Configuración", conf_path
    #content
      #msgs
        %p.notice
          = flash[:notice]
        %p.alert
          = flash[:alert]
          
      = yield
    #footer
      = render :partial =>'layouts/footer'