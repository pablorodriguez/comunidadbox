.vertical_menu
  = render "conf/menu"
  = render "actions"
.contentright_s
  .box_bottom
    %h1 Formas de Pago
  %table#sort_table.comboxtable
    %thead
      %tr
        %th Name
        %th
    - @payment_methods.each do |pm|
      %tr
        %td= pm.native_name
        %td
          = link_to image_tag('edit.png'), edit_payment_method_path(pm)
          = link_to image_tag('delete.png'), pm, :confirm => 'Esta seguro?', :method => :delete

