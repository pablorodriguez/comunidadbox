- javascript 'jquery.formatCurrency-1.4.0'
- javascript 'jquery.formatCurrency.es-AR'
- javascript 'price_list'
#price_list_items
  - form_for @price_list,:url =>"update_item_price",:html =>{:id =>"price_list_form"} do |f|
    %table.service_table
      %tr.table_header
        %td{:colspan=>2} Actualizar Precio
      %tr
        %td
          %ol
            %li
              = radio_button_tag :item_update,:all
              = label_tag :item_update, "Todos los materiales",:for => :item_update_all
            %li
              = radio_button_tag :item_update, :all_page
              = label_tag :item_update, "Todas las paginas",:for => :item_update_all_page
            %li
              = radio_button_tag :item_update, :actual_page,true
              = label_tag :item_update, "Pagina actual",:for=>:item_update_actual_page
        %td
          Incremento
          = text_field_tag :percentage,@percentage
          = button_to_function "Grabar Precios","savePriceList()"
          #service_types_ids{:style =>"display:none"}
            = hidden_field_tag "material",@material
            = hidden_field_tag "page",@page
    %table#sort_table.service_table
      %thead
        %tr.table_header
          %th{:width=>"25%"}
            Tipo de Servicio
          %th{:width=>"45%"}
            Material
          %th{:width=>"10%"}
            Precio
          %th{:width=>"20%"}
            Nuevo Precio 
      = render :partial => "item", :collection =>@materials,:as=>:material
    %br      
    = will_paginate @materials
    
#service_types
  -form_for @price_list,:url => items_price_list_path(@price_list),:html=>{:method =>:get} do |ff|
    %table.service_table
      %tr.table_header
        %td Tipo de Servicio
      - for service_type in current_user.company.service_type
        %tr
          %td
            = check_box_tag "service_type_ids[]",service_type.id,@service_type_ids.include?(service_type.id.to_s),:class =>:service_type_id
            = label_tag service_type.name
      %tr.table_header
        %td Material
        %tr
          %td
            = text_field_tag "material",@material
        %tr
          %td
            = submit_tag "Buscar"
