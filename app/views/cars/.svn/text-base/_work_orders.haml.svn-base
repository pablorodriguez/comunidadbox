- javascript 'jquery.dataTables'
- javascript 'sort.table'
- stylesheets 'demo_page'
- stylesheets 'demo_table'
%h1
  Servicios Realizados
%table{:id=>'sort_table',:class=>'display service_table'}
  %thead
    %tr
      %th Detalle
      %th Empresa
      %th Estado
      %th Realizado
      %th Total
      %th Calif. empresa
      %th Calif. usuario
  - for work_order in @work_orders
    %tr
      %td
        = link_to work_order.detail, work_order
      %td
        = work_order.company.name
      %td
        = work_order.status
        = link_to_pdf work_order          
        -if work_order.open? && current_user.current_company
          = link_to image_tag('edit.png'), edit_workorder_path(work_order)
      %td        
        = work_order.created_at.strftime("%d/%m/%Y")
      %td.number
        = number_to_currency work_order.total_price
      %td
        = get_company_rank(current_user,work_order)
      %td
        -if work_order.finish?
          = get_user_rank(current_user,work_order)
%br        
= link_to_back