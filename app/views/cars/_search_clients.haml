#client_search
  %h3=t(".search_clients")
  .form
    = form_tag clients_path,{:remote =>true, :method =>:get,:id=>:search_client_form} do
      = hidden_field_tag("page","1")
      %table
        %thead
          %tr
            %td
              = text_field_tag 'email',"",:class=>"input",:placeholder=>t(".email")
          %tr
            %td
              = text_field_tag 'first_name',"",:class=>"input",:placeholder=>t(".name")
          %tr
            %td
              = text_field_tag 'last_name',"",:class=>"input",:placeholder=>t(".last_name")
          %tr
            %td
              = text_field_tag 'company_name',"",:class=>"input",:placeholder=>t("business_name")
          %tr
            %td    
              = image_submit_tag("find.png",:class =>"input_img")
  .ajax_loader.right