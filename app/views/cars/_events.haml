.event.row
- for event in @events  
  .event.row
    .status.left
      = icon_status event.status
    .service.left
      = link_to event.service_type.name, event        
    .workorder.left.clear
      %br
      = link_to "Generado por ... #{event.service.workorder.id}", event.service.workorder      
      - if event.service_done
        %br
        = link_to "#{Status.status(event.status)} por ... #{event.service.workorder.id}", event.service_done.workorder
    .dueDate.right
      %label{:class=>"#{event_class(event)}"}
        =event.dueDate
    .km.right      
      %strong
        Km:
      = event.km
%br
#paginator_event
  = will_paginate @events,:params => @e_pages  