.datos_personales
  %table.tabla_datos_personales
    %tr
      %td
        %h3 Nombre
      %td
        = car.user.full_name
        - if car.user.company_name
          %label{:title=>"Razón Social"}
            = "[#{car.user.company_name}]" 
        - if car.user.cuit
          %label{:title=>"CUIT"}
            = "[#{car.user.cuit}]" 
      %td
        %h3 Dominio
      %td
        %p#domain
          = car.domain
      %td
        %h3 Año
      %td
        = car.year
    %tr  
      %td
        %h3 Email
      %td
        = car.user.email
      %td
        %h3 Marca y Modelo
      %td
        = "#{car.brand.name} #{car.model.name}"
        
    %tr
      %td
        %h3 Teléfono
      %td
        = car.user.phone
      %td 
        %h3 Km Actual
      %td
        = hidden_field_tag :url_update_km, update_km_cars_path
        %p#km_actual.edit_in_place
          = car.km
      %td
        %h3 Km Promedio Mensual
      %td
        = hidden_field_tag :url_update_km_avg, update_km_avg_cars_path
        %p#km_avg.edit_in_place
          = car.kmAverageMonthly