- stylesheets 'control_panel'
- javascript 'pagination'
#car_info
  %h1
    = vineta 
    Automóvil
  .contentleft
    %h1
      Información
      .brand_img
        %img{:src =>"/images/brands/#{@car.brand.name}.png",:width=> 100, :height=>100}
    %table.service_table
      %tr
        %td.label_title Dueño
        %td
          = h @car.user.full_name
      %tr  
        %td.label_title Año
        %td
          = h @car.year
      %tr
        %td.label_title Dominio
        %td
          = h @car.domain
      %tr  
        %td.label_title Km
        %td
          = h @car.km
      %tr
        %td.label_title Marca
        %td
          = h @car.brand.name
      %tr  
        %td.label_title Combustible
        %td
          = h @car.fuel
      %tr
        %td.label_title Modelo
        %td
          = h @car.model.name        
      %tr  
        %td.label_title Promedio Km Mensual
        %td
          = h @car.kmAverageMonthly
      %tr
        %td.label_title Total Gastado
        %td.label_title
          %strong
            = h number_to_currency @car.total_spend
      - if current_user.company
        %tr
          %td.label_title 
            Total Gastado en tu empresa
          %td.label_title
            %strong
              = h number_to_currency @car.total_spend(current_user.company.id) 
        
  
    = link_to_back
    = link_to image_tag('new.png'),new_workorder_path(:car_id =>@car),{:title=>"Nuevo Servicio"}
    -if (@car.user.id == current_user.id)
      = link_to image_tag('edit.png'),edit_car_path(@car),{:title=>"Modificar automóvil"}
          
  .contentright
    #cars_work_orders    
      = render "work_orders"
    #cars_future_events
      = render "events"
