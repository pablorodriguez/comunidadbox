class Alarm < ActiveRecord::Base
  belongs_to :user

  validates_presence_of :name, :user, :time

  validates_numericality_of :time

  TIME_UNIT_TYPES = [
    [ 'Hs' , 'Hs' ],
    [ 'Días' , 'Días' ],
    [ 'Meses' , 'Meses' ],
    [ 'Años' , 'Años' ]
  ]

  STATUS_TYPES = [
    [ 'Activado' , 'Activado' ],
    [ 'Desactivado' , 'Desactivado' ]
  ]
  
  RANK_VALUES =[
    ["Muy Malo (1)" ,1],
    ["Malo (2)",2],
    ["Regular (3)",3],
    ["Muy Bueno (4)",4],
    ["Excelente (5)",5]
  ]
end

