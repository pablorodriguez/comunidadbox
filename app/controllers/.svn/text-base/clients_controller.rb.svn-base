class ClientsController < ApplicationController
  def edit
    @user = User.find(params[:id])
    @models = Array.new
  end

  def update
    @client = User.find(params[:id])
    @models = Array.new
    if @client.update_attributes(params[:user])
      flash[:notice] = 'Cliente actualizado con exito.'
      redirect_to :root
    else
      flash[:notice]= 'Error al actualizar los datos'
      render :action => 'edit'
    end
  end

  def show
  end

  def filter
    @condition = ''
    unless params[:first_name] == ''
      @condition += 'first_name=' + "'" + params[:first_name]+ "'"
    end
    unless params[:last_name] == ''
      unless @condition == ''
        @condition += ' AND '
      end
      @condition += 'last_name LIKE ' + "'%" +params[:last_name] + "%'"
    end
    unless params[:email] == ''
      unless @condition == ''
        @condition += ' AND '
      end
      @condition += 'email=' + "'" + params[:email] + "'"
    end
    @clients = User.find(:all, :conditions => @condition)

    respond_to do |format|
      format.js do
        render :update do |page|
          if @clients.empty?
            page.replace_html 'result', :text => 'No existe ningun resultado segun su criterio de busqueda, por favor intente nuevamente...'
          else
            page.replace_html 'result', :partial => 'filter'
          end
        end
      end
    end
  end
end

